{
  "configurations": [
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "Debug test_runner",
      "program": "${workspaceFolder}/build/test_runner",
      "args": ["${input:testName}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "testName",
      "description": "Select which test to run",
      "options": [
        "test/phase_align_1",
        "test/phase_align_right_shift",
        "test/phase_align_left_shift"
      ]
    }
  ]
}
